{{!-- <body class="content-center"> --}}
<div class='min-h-screen flex items-center justify-center space-x-32'>
    <div class='bg-white p-8 rounded-lg shadow-md max-w-md w-full opacity-90'>
      <h2 class='text-2xl font-bold mb-4'>Login</h2>
      <form class='login-form'>
        <div class='mb-4'>
          <label for='email-login' class='block font-bold mb-2'>Email</label>
          <input
            type='text'
            id='email-login'
            placeholder='Enter Username'
            name='email'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <div class='mb-4'>
          <label
            for='password-login'
            class='block font-bold mb-2'
          >Password</label>
          <input
            type='password'
            id='password-login'
            placeholder='Enter Password'
            name='password'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <div class='flex justify-between'>
          <button
            type='submit'
            class='h-12 bg-violet-700 hover:bg-rose-200 text-white font-bold py-2 px-4 rounded'
          >
            Login
          </button>
        </div>
      </form>
    </div>
    <div class='bg-white p-8 rounded-lg shadow-md max-w-md w-full opacity-90'>
      <h2 class='text-2xl font-bold mb-4'>Sign Up</h2>
      <form class='signup-form'>
        <div class='mb-4'>
          <label for='name' class='block font-bold mb-2'>Name</label>
          <input
            type='text'
            id='name-signup'
            placeholder='Enter your name'
            name='name'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <div class='mb-4'>
          <label for='email' class='block font-bold mb-2'>Email</label>
          <input
            type='email'
            id='email-signup'
            placeholder='Enter your email'
            name='email'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <div class='mb-4'>
          <label for='password' class='block font-bold mb-2'>Password</label>
          <input
            type='password'
            id='password-signup'
            placeholder='Enter your password'
            name='password'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <div class='mb-4'>
          <label class='block font-bold mb-2'>Confirm Password</label>
          <input
            id='confirm-password-signup'
            type='password'
            placeholder='Confirm your password'
            name='confirm-password'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <button
          type='submit'
          class='bg-violet-700 hover:bg-rose-200 text-white font-bold py-2 px-4 rounded'>
          Sign Up
        </button>
      </form>
    </div>   
